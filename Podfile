# platform :ios, '6.0'

link_with 'Reader'

target 'Reader' do
	use_frameworks!
	pod 'Swift-Collections', :git => 'https://github.com/jbulat/Swift-Collections'
	pod 'MendeleyKit', :git => 'https://github.com/Mendeley/mendeleykit.git'
end

target 'ReaderTests' do
	use_frameworks!
	pod 'Swift-Collections', :git => 'https://github.com/jbulat/Swift-Collections'
	pod 'Nimble', '~> 0.4.0'
end